{% extends 'base.html.twig' %}

{% block body %}

    <h1>This is your tag collection</h1>

    <div class="row">
        {% for tag in tags %}
            <div class="col-3">
                <div class="card mb-4">
                    <div class="card-body bg-dark text-light">
                        <h5 class="card-title">{{ tag.name }}</h5>
                        <p>Songs: {{ tag.tracks.count }}</p>
                        <div class="row">
                            <div class="col-6"><a class="btn d-block btn-primary" href="{{ path('tags.detail', {'id': tag.id}) }}">View</a></div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No tags in your library</p>
        {% endfor %}
    </div>

{% endblock %}
