{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ tag.name }}</h1>
    <h6 class="text-muted">Tag with {{ tag.tracks|length }} songs</h6>

    <div class="row pt-3">
        {% for track in tag.tracks %}
            {% set spotifyTrack = getTrack(track.spotifyId) %}

            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-body bg-dark text-light">
                        <h5 class="card-title">{{ spotifyTrack.name }}</h5>
                        <div class="row">
                            <div class="col-auto">
                                {% if spotifyTrack.album.images[0] is defined %}
                                    <img src="{{ spotifyTrack.album.images[0].url }}" width="200" alt="album image">
                                {% else %}
                                    <div style="width: 200px; height: 200px"></div>
                                {% endif %}
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="card-title">
                                            {% for artist in spotifyTrack.artists %}
                                                <a href="{{ artist.external_urls.spotify }}"
                                                   target="_blank">{{ artist.name }}</a>{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        </h6>

                                        <p class="card-text">Popularity {{ spotifyTrack.popularity }}</p>
                                        <p class="card-text">Duration {{ (spotifyTrack.duration_ms/1000/60)|number_format(2) }} min</p>
                                        <p class="card-text">Album {{ spotifyTrack.album.name }} ({{ spotifyTrack.album.release_date }})</p>

                                    </div>

                                    <div class="col">
                                        Other tags of this song:

                                        {% for trackTag in getTrackTags(spotifyTrack.id)|filter(trackTag => trackTag.id != tag.id) %}
                                            <a href="{{ path('tags.detail', {'id': trackTag.id}) }}">{{ trackTag.name }}</a>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col">
                                        <a class="btn d-block btn-primary" href="{{ path('track', {'trackId': spotifyTrack.id} ) }}">
                                            View
                                        </a>
                                    </div>
                                    <div class="col-auto">
                                        <a class="btn btn-secondary" href="{{ spotifyTrack.external_urls.spotify }}" target="_blank">
                                            View in Spotify
                                        </a>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}
