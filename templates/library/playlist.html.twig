{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ playlist.name }}</h1>
    <h6 class="text-muted">Playlist</h6>

    <div class="row">
        {% for trackItem in playlist.tracks.items|filter(trackItem => trackItem.track.is_local == false) %}
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-body bg-dark text-light">
                        <h5 class="card-title">{{ trackItem.track.name }}</h5>
                        <div class="row">
                            <div class="col-auto">
                                {% if trackItem.track.album.images[0] is defined %}
                                    <img src="{{ trackItem.track.album.images[0].url }}" width="200" alt="album image">
                                {% else %}
                                    <div style="width: 200px; height: 200px"></div>
                                {% endif %}
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="card-title">
                                            {% for artist in trackItem.track.artists %}
                                                <a href="{{ artist.external_urls.spotify }}"
                                                   target="_blank">{{ artist.name }}</a>{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        </h6>

                                        <p class="card-text">Added {{ trackItem.added_at }}</p>
                                        <p class="card-text">Popularity {{ trackItem.track.popularity }}</p>
                                        <p class="card-text">Duration {{ (trackItem.track.duration_ms/1000/60)|number_format(2) }} min</p>
                                        <p class="card-text">Album {{ trackItem.track.album.name }} ({{ trackItem.track.album.release_date }})</p>

                                    </div>

                                    <div class="col">
                                        tags:
                                        {% for i in 1..10 %}
                                            tag {{ i }}
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col">
                                        <a class="btn d-block btn-primary" href="{{ path('library.track', {'trackId': trackItem.track.id} ) }}">
                                            View
                                        </a>
                                    </div>
                                    <div class="col-auto">
                                        <a class="btn btn-secondary" href="{{ trackItem.track.external_urls.spotify}}" target="_blank">
                                            View in Spotify
                                        </a>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
